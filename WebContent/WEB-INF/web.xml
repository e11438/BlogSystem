<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>StarBloggers</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  <servlet>
    <servlet-name>addPost</servlet-name>
    <servlet-class>user.post.AddaBlog</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addPost</servlet-name>
    <url-pattern>/userFiles/addPost</url-pattern>
  </servlet-mapping>
  
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>users web resource</web-resource-name>
  		<url-pattern>/userFiles/*</url-pattern>
  		<url-pattern>/userFiles/new_post.html</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>users</role-name>
  	</auth-constraint>
  	
  </security-constraint>
  
  <login-config>
  	<auth-method>BASIC</auth-method>
  </login-config>
  
  		<security-role> 
                <role-name>users</role-name> 
        </security-role>
</web-app>